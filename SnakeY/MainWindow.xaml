<Window x:Class="SnakeY.MainWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeY"
        mc:Ignorable="d"
        Title="SNAKE THE GAME" Height="700" Width="900" ResizeMode="NoResize">
    <Grid Background="Lavender" Width="900" >
        <Grid.RowDefinitions>
            <RowDefinition Height="600" />
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="canvas"  MaxHeight="600" MaxWidth="900" Grid.Row="0" Background="Black" >
            <Ellipse x:Name="HeadEllipse"  Fill="Aqua" Width="10" Height="10"    />
        </Canvas>
        <Label  x:Name="label" Panel.ZIndex="2" Content="GHB" FontFamily="Arial Black"   FontSize="30" Grid.Row="1"   />
    </Grid>
</Window>
